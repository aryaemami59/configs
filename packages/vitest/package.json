{
  "name": "@arya/vitest-config",
  "version": "0.0.1",
  "description": "Vitest configuration for TypeScript projects",
  "main": "./dist/vitest.config.mjs",
  "types": "./dist/vitest.config.d.mts",
  "module": "./dist/vitest.config.mjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/vitest.config.d.mts",
        "default": "./dist/vitest.config.mjs"
      },
      "node": {
        "types": "./dist/vitest.config.d.mts",
        "default": "./dist/vitest.config.mjs"
      }
    }
  },
  "files": [
    "dist",
    "*.mts"
  ],
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf dist",
    "prepack": "yarn build"
  },
  "keywords": [
    "config",
    "vitest-config",
    "vitest",
    "vite",
    "configuration"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@arya/tsconfig": "workspace:^",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  }
}
